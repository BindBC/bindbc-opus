{
	"name": "bindbc-opus",
	"description": "Static & dynamic bindings to the Opus libraries, compatible with BetterC, @nogc, and nothrow.",
	"authors": ["Aya Partridge"],
	"license": "BSL-1.0",
	
	"dependencies": {"bindbc-common": "~>1.0"},
	"targetType": "staticLibrary",
	"targetPath": "lib",
	"targetName": "BindBC_Opus",
	
	"configurations": [
		{
			"name": "dynamic",
			"dependencies": {"bindbc-loader": "~>1.1"},
		},
		{
			"name": "dynamicBC",
			"dependencies": {"bindbc-loader": "~>1.1"},
			"subConfigurations": {
				"bindbc-loader": "yesBC",
				"bindbc-common": "yesBC",
			},
			"buildOptions": ["betterC"],
		},
		{
			"name": "static",
			"versions": ["BindOpus_Static"],
		},
		{
			"name": "staticBC",
			"subConfigurations": {
				"bindbc-common": "yesBC",
			},
			"buildOptions": ["betterC"],
			"versions": ["BindOpus_Static"],
		}
	],
}
