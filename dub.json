{
	"name": "bindbc-opus",
	"description": "Static & dynamic bindings to Opus, compatible with BetterC, @nogc and nothrow.",
	"homepage": "",
	"authors": ["Aya Partridge"],
	"license": "Boost",
	
	"targetType": "staticLibrary",
	"targetPath": "lib",
	"targetName": "BindBC_Opus",
	
	"configurations": [
		{
			"name": "dynamic",
			"dependencies": {"bindbc-loader": "~>1.1.0"},
		},
		{
			"name": "dynamicBC",
			"dependencies": {"bindbc-loader": "~>1.1.0"},
			"subConfigurations": {"bindbc-loader": "yesBC"},
			"dflags": ["-betterC"],
		},
		{
			"name": "static",
			"versions": ["BindOpus_Static"],
		},
		{
			"name": "staticBC",
			"dflags": ["-betterC"],
			"versions": ["BindOpus_Static"],
		}
	],
}
